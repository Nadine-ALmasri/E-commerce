@model ProductDTO

<h4>Edit Product</h4>
<hr />
<form asp-controller="Product" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-warning"></div>
       <div class="form-group">
       <input asp-for="Id" type="hidden" />
       </div>

        <div class="form-group">
        <label asp-for="Name" class="control-label" ></label>
        <input asp-for="Name" placeholder="@Model.Name" class="form-control" />
        </div>

        <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    
    <div class="form-group" >
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
            <img src="@(Model.ImageUrl)" alt="Product Image" style="max-width:500px; max-height:500px" />
    }
    else
    {
    <p>No image available.</p>
    }
    </div>
    
