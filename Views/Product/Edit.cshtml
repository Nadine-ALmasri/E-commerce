@model ProductDTO

<h4>Edit Product</h4>
<hr />
<form asp-controller="Product" asp-action="Edit" method="post">

       <div class="form-group">
       <input asp-for="Id" type="hidden" />
       </div>

        <div class="form-group">
        <label asp-for="Name" class="control-label" ></label>
        <input asp-for="Name" placeholder="@Model.Name" class="form-control" />
        </div>

        <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="select2 form-control">
            @foreach (var category in ViewBag.CategoriesDTO as SelectList)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
        </div>
        <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<br />
<p>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to List</a>
</p>