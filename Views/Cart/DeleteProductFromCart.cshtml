@model CartProducts

<h4>Delete Product</h4>
<hr />
<h5>Are you sure you want to Remove this Product from the cart?</h5>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            Category's Name'
        </dt>
    </dl>
    <form method="post" asp-action="DeleteProductFromCart" asp-controller="Cart">
        <input type="hidden" asp-for="@Model.Product.Id" />
        <input type="submit" value="Remove" class="btn btn-danger" />
    </form>
    <br />
    <a asp-action="Index"  class="btn btn-dark">Cancel</a>
</div>
