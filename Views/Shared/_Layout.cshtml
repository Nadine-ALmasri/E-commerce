@using Microsoft.AspNetCore.Identity;
@using E_commerce.Models;
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
    <style>
        /* Custom CSS for Navbar */
        .navbar {
            background-color: black; /* Navbar background color */
            margin-bottom: 0; /* Remove margin to make the navbar cover the whole width */
        }

        .navbar-brand {
            color: gold !important; /* Navbar brand text color */
            font-size: 24px; /* Adjust font size */
        }

        .navbar-toggler-icon {
            background-color: gold; /* Navbar toggler icon color */
        }

        /* Add logo image */
        .navbar-brand img {
            max-height: 40px; /* Adjust logo image height */
            margin-right: 10px; /* Add spacing to the right of the logo */
        }

        .navbar-text {
            color: gold; /* Welcome message text color */
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 16px; /* Adjust font size */
            margin-top: 10px; /* Adjust top margin */
        }

        /* Custom CSS class for the "Sign Out" link */
        .sign-out-link {
            color: red !important;
            text-decoration: none !important;
        }

        /* Move logout link to the end */
        .navbar-nav.flex-grow-1 {
            justify-content: space-between;
        }

        /* Logout link style */
        .navbar-nav .nav-link.logout-link {
            color: gold !important;
        }

            .navbar-nav .nav-link.logout-link:hover {
                color: #f8f9fa !important; /* Change color on hover */
            }

        /* Search input and button styles */
        .search-form {
            display: flex;
        }

        .search-input {
            width: 200px;
            margin-right: 10px;
        }

        .search-button {
            background-color: gold;
            color: black;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
        }

        .logo {
            width: 200%;
            height: 100%;
        }

        /* Footer style */
        .footer {
            background-color: black; /* Footer background color */
            color: gold; /* Footer text color */
            text-align: center; /* Center align text */
            padding: 10px; /* Add some padding */
            font-size: 14px; /* Adjust font size */
            position: absolute; /* Position the footer at the bottom */
            width: 100%; /* Make the footer cover the whole width */
            bottom: 0; /* Stick the footer to the bottom */
        }

        /* Newsletter form style */
        .newsletter-form {
            margin-top: 20px; /* Adjust top margin for newsletter form */
        }

        .newsletter-label {
            color: gold; /* Label text color */
            margin-right: 10px; /* Add spacing to the right of the label */
        }

        .newsletter-input {
            width: 200px;
            margin-right: 10px;
        }

        .newsletter-button {
            background-color: gold;
            color: black;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
        }
    </style>
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Add your logo image here -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="./lib/face1.PNG" alt="Logo" class="logo" />
                    @if (signInManager.IsSignedIn(User))
                    {
                        <span class="navbar-text">@User.Identity.Name</span>
                    }
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Navigation links and user actions as dropdown -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"></a>
                        </li>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Cart" asp-action="Index">Shopping Cart</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="LogOut">Sign Out</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-link text-white">@Html.ActionLink("Sign Up", "SignUp", "Auth", null, new { @class = "btn btn-outline-secondary" })</li>
                            <li class="nav-link text-white">@Html.ActionLink("Log In", "LogIn", "Auth", null, new { @class = "btn btn-light" })</li>
                        }
                    </ul>


                    <!-- Search input and button -->
                    <form class="form-inline my-2 my-lg-0 search-form" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control mr-sm-2 search-input" type="search" placeholder="Search" aria-label="Search" name="query">
                        <button class="btn btn-outline-success my-2 my-sm-0 search-button" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

            <footer class="bg-black text-center " style="color:gold; ">
                <!-- Grid container -->
                <div class="container p-4 pb-0 mb-0">
                    <!-- Section: Form -->
                    <section class="">
                        <form action="">
                            <!--Grid row-->
                            <div class="row d-flex justify-content-center">
                                <!--Grid column-->
                                <div class="col-auto">
                                    <p class="pt-2">
                                        <strong>Sign up for our newsletter</strong>
                                    </p>
                                </div>
                                <!--Grid column-->
                                <!--Grid column-->
                                <div class="col-md-5 col-12">
                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input type="email" id="form5Example2" class="form-control" />
                                        <label class="form-label" for="form5Example2">Email address</label>
                                    </div>
                                </div>
                                <!--Grid column-->
                                <!--Grid column-->
                                <div class="col-auto">
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-outline-light  bg-gold mb-4">
                                        Subscribe
                                    </button>
                                </div>
                                <!--Grid column-->
                            </div>
                            <!--Grid row-->
                        </form>
                    </section>
                    <!-- Section: Form -->
                </div>
                <!-- Grid container -->
                <!-- Copyright -->
                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    © 2023 Copyright:FaceShop

                </div>
                <!-- Copyright -->
            </footer>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
